import java.util.*;

public class TowerofHanoi {
    
    // recursive method to solve the tower of hanoi problem 
    public static void toh(int n, int t1, int t2, int t3) {
        // base case 
        if (n == 0) {
            return;
        }

        // move n-1 disks from t1 to t3 using t2 as auxiliary 
        toh(n - 1, t1, t3, t2);

        // move nth disk from t1 to t2 
        System.out.println("Move Disk " + n + "from Tower " + t1 + "to Tower " + t2);

        // move the n-1 disks 
        toh(n-1, t3, t2, t1);
    }

    // main method 
    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);

        // ask the user to input the number of disks 
        System.out.println("Enter the number of disks: ");
        int n = scn.nextInt();

        // ask the usesr to input the numbers for the three towers 
        System.out.println("Enter the number for the forst tower (t1): ");
        int t1 = scn.nextInt(); 

        System.out.println("Enter the number for the second tower (t2): ");
        int t2 = scn.nextInt();
        
        System.out.println("Enter the number for the third tower (t3): ");
        int t3 = scn.nextInt();

        // call the toh method 
        toh(n, t1, t2, t3);
    }
}
